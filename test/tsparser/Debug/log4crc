<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">

<log4c version="1.2.4">

	<config>
		<bufsize>0</bufsize>
		<debug level="2"/>
		<nocleanup>0</nocleanup>
		<reread>1</reread>
	</config>

	<category name="root" priority="debug"/>
    <category name="six13log.log" priority="error" appender="stdout" />

	<rollingpolicy name="myrollingpolicy" type="sizewin" maxsize="20000000" maxnum="10" />

	<appender name="myrollingfileappender" type="rollingfile" logdir="." prefix="tsparsercpp_log" layout="dated" rollingpolicy="myrollingpolicy" />

	<appender name="stdout" type="stream" layout="basic"/>
	<appender name="ts-parser-log.txt" type="stream" layout="dated"/>

	<appender name="stderr" type="stream" layout="dated"/>
	<appender name="syslog" type="syslog" layout="basic"/>

	
	<appender name="plain_stderr" type="s13_stderr" layout="none"/>
	<appender name="cat_stderr" type="s13_stderr" layout="catlayout"/>
	<appender name="xml_stderr" type="s13_stderr" layout="xmllayout"/>
    <appender name="user_stderr" type="s13_stderr" layout="userlayout"/>

	<layout name="basic" type="basic"/>
	<layout name="dated" type="dated"/>
	
	<layout name="catlayout" type="s13_cat"/>
	<layout name="xmllayout" type="s13_xml"/>
    <layout name="none" type="s13_none"/>
	<layout name="userlayout" type="s13_userloc"/>
	
	<category name="tsparser.application" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.tspacket" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.tsstream" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.tsheader" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.bitstream" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.adaptationfield" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.pespacket" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.patpacket" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.pmtpacket" priority="trace" appender="myrollingfileappender" />
	<category name="tsparser.elementarystream" priority="info" appender="myrollingfileappender" />
	
</log4c>
